CC = g++
MAKE = make
RM = rm -f
RMRF = rm -rf
FLAGS = -std=c++11

ROUTE = ../common/

DataLinkCacheDir = toDatalinkCache
NetworkCacheDir = toNetworkCache

NETWORK-NAME = network
NETWORK-SND-SRC = sender1_$(NETWORK-NAME).cpp
NETWORK-REC-SRC = receiver1_$(NETWORK-NAME).cpp
NETWORK-LIB = lib$(NETWORK-NAME).so
NETWORK-SND-TARGET = sender1_$(NETWORK-NAME)
NETWORK-REC-TARGET = receiver1_$(NETWORK-NAME)

DATALINK-NAME = datalink
DATALINK-SND-SRC = sender1_$(DATALINK-NAME).cpp
DATALINK-REC-SRC = receiver1_$(DATALINK-NAME).cpp
DATALINK-LIB = lib$(DATALINK-NAME).so
DATALINK-SND-TARGET = sender1_$(DATALINK-NAME)
DATALINK-REC-TARGET = receiver1_$(DATALINK-NAME)

PHYSICAL-NAME = physical
PHYSICAL-SND-SRC = sender1_$(PHYSICAL-NAME).cpp
PHYSICAL-REC-SRC = receiver1_$(PHYSICAL-NAME).cpp
PHYSICAL-LIB = $(ROUTE)lib$(PHYSICAL-NAME).so
PHYSICAL-SND-TARGET = sender1_$(PHYSICAL-NAME)
PHYSICAL-REC-TARGET = receiver1_$(PHYSICAL-NAME)

.PHONY: clean
	#avoid to make clean.*


all: $(NETWORK-SND-TARGET) $(NETWORK-REC-TARGET) \
	 $(DATALINK-SND-TARGET) $(DATALINK-REC-TARGET) \
	 $(PHYSICAL-SND-TARGET) $(NETWORK-PHYSICAL-TARGET)

# $@-target
# $^-all prerequisites
# $<-first prerequisite


$(NETWORK-SND-TARGET): $(NETWORK-SND-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(NETWORK-NAME)
$(NETWORK-REC-TARGET): $(NETWORK-REC-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(NETWORK-NAME)

$(DATALINK-SND-TARGET): $(DATALINK-SND-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(DATALINK-NAME)
$(DATALINK-REC-TARGET): $(DATALINK-REC-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(DATALINK-NAME)

$(PHYSICAL-SND-TARGET): $(PHYSICAL-SND-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(PHYSICAL-NAME)
$(PHYSICAL-REC-TARGET): $(PHYSICAL-REC-SRC)
	$(CC) $(FLAGS) -o $@ $< -L $(ROUTE) -l $(PHYSICAL-NAME)

clean:
	$(RM) $(NETWORK-SND-TARGET) $(NETWORK-REC-TARGET) \
	 	  $(DATALINK-SND-TARGET) $(DATALINK-REC-TARGET) \
	 	  $(PHYSICAL-SND-TARGET) $(NETWORK-PHYSICAL-TARGET)
	$(RMRF) $(toDatalinkCache) $(toNetworkCache)
