CC = g++
MAKE = make
RM = rm -f
FLAGS = -std=c++11

ROUTE = ../common/

NETWORK-NAME = network
NETWORK-SND-SRC = sender3_$(NETWORK-NAME).cpp
NETWORK-REC-SRC = receiver3_$(NETWORK-NAME).cpp
NETWORK-LIB = $(ROUTE)lib$(NETWORK-NAME).so
NETWORK-SND-TARGET = sender3_$(NETWORK-NAME)
NETWORK-REC-TARGET = receiver3_$(NETWORK-NAME)

DATALINK-NAME = datalink
DATALINK-SND-SRC = sender3_$(DATALINK-NAME).cpp
DATALINK-REC-SRC = receiver3_$(DATALINK-NAME).cpp
DATALINK-LIB = $(ROUTE)lib$(DATALINK-NAME).so
DATALINK-SND-TARGET = sender3_$(DATALINK-NAME)
DATALINK-REC-TARGET = receiver3_$(DATALINK-NAME)

PHYSICAL-NAME = physical
PHYSICAL-SND-SRC = sender3_$(PHYSICAL-NAME).cpp
PHYSICAL-REC-SRC = receiver3_$(PHYSICAL-NAME).cpp
PHYSICAL-LIB = $(ROUTE)lib$(PHYSICAL-NAME).so
PHYSICAL-SND-TARGET = sender3_$(PHYSICAL-NAME)
PHYSICAL-REC-TARGET = receiver3_$(PHYSICAL-NAME)

.PHONY: clean
	#avoid to make clean.*


all: $(NETWORK-SND-TARGET) $(NETWORK-REC-TARGET) \
	 $(DATALINK-SND-TARGET) $(DATALINK-REC-TARGET) \
	 $(PHYSICAL-SND-TARGET) $(NETWORK-PHYSICAL-TARGET)

# $@-target
# $^-all prerequisites
# $<-first prerequisite


$(NETWORK-SND-TARGET): $(NETWORK-SND-SRC) $(NETWORK-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(NETWORK-NAME)
$(NETWORK-REC-TARGET): $(NETWORK-REC-SRC) $(NETWORK-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(NETWORK-NAME)

$(DATALINK-SND-TARGET): $(DATALINK-SND-SRC) $(DATALINK-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(DATALINK-NAME)
$(DATALINK-REC-TARGET): $(DATALINK-REC-SRC) $(DATALINK-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(DATALINK-NAME)

$(PHYSICAL-SND-TARGET): $(PHYSICAL-SND-SRC) $(PHYSICAL-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(PHYSICAL-NAME)
$(PHYSICAL-REC-TARGET): $(PHYSICAL-REC-SRC) $(PHYSICAL-LIB)
	$(CC) $(FLAGS) -o $@ $< -L . -l $(PHYSICAL-NAME)

clean:
	$(RM) $(NETWORK-SND-TARGET) $(NETWORK-REC-TARGET) \
	 	  $(DATALINK-SND-TARGET) $(DATALINK-REC-TARGET) \
	 	  $(PHYSICAL-SND-TARGET) $(NETWORK-PHYSICAL-TARGET)
